<%= form_for [@species, @sighting] do |f| %>
  <%= f.label :lat %>
  <%= f.number_field :lat, class: 'text_field', step: 0.0000001 %>
  <%= f.label :long %>
  <%= f.number_field :long, class: 'text_field', step: 0.0000001 %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.collection_select :region_id, Region.order(:name),:id,:name %>
  <%= f.submit %>
<% end %>
